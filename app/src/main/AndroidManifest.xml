<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myapps.com.tabs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Simple_Tabs"
            android:label="@string/title_activity_simple__tabs"
             android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Scrollable_Tabs"
            android:label="@string/title_activity_scrollable__tabs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Icon_Text_Tabs"
            android:label="@string/title_activity_icon__text__tabs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Only_Icons"
            android:label="@string/title_activity_only__icons"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Custom_Tabs"
            android:label="@string/title_activity_custom__tabs"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>